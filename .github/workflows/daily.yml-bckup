name: 2-Hour Tech Pulse
on:
  schedule:
    - cron: "0 */2 * * *" # Runs exactly every 2 hours
  workflow_dispatch:

jobs:
  run-script:
    runs-on: ubuntu-latest
    # Increase timeout to handle the 40-minute jitter
    timeout-minutes: 60
    steps:
      - uses: actions/checkout@v4
      - name: Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.11"
      - name: Install Libs
        run: pip install requests wikipedia libsql-client groq
      - name: Execute
        env:
          TURSO_DATABASE_URL: ${{ secrets.TURSO_DATABASE_URL }}
          TURSO_AUTH_TOKEN: ${{ secrets.TURSO_AUTH_TOKEN }}
          GROQ_API_KEY: ${{ secrets.GROQ_API_KEY }}
          CLOUDFLARE_DEPLOY_HOOK: ${{ secrets.CLOUDFLARE_DEPLOY_HOOK }}
        run: python automate.py
