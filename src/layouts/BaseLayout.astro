---
// src/layouts/BaseLayout.astro
const { 
  title, 
  description, 
  image, 
  slug, 
  type = "article",
  noindex = false // Use a simple boolean instead of the whole post object
} = Astro.props;

const siteName = "KnowNow Technical Pulse"; 
const domain = "https://yashawanthbg2001.github.io/knownow"; 
const canonicalURL = new URL(slug ? `/article/${slug}/` : '', domain).href; 
const defaultDescription = "Explore KnowNow's insights and discover the latest 2026 tech trends."; 
const defaultImage = `${domain}/default-og.png`; 

const robotsContent = noindex ? "noindex" : "index, follow";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | ${siteName}` : siteName}</title>
    <meta name="description" content={description || defaultDescription} />
    <meta name="robots" content={robotsContent} />
    
    <meta property="og:title" content={title || siteName} />
    <meta property="og:image" content={image || defaultImage} />
    
    <slot name="head" /> <style is:global>
      body { font-family: 'Inter', sans-serif; margin: 0; padding: 0; line-height: 1.6; color: #111; background: #fff; }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>